{% extends "layout/base.twig" %}

{% block content %}
    <div id="content">
        {{ block('greenter_header') }}
        <div>
            <div id="left-column">
                {{ block('control_panel') }}
                {{ block('leftnav') }}
            </div>
            <div id="right-column">
                {{ block('menu') }}
                <div id="page-content">
                    {% block page_content '' %}
                </div>
                {{ block('footer') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block greenter_header %}
    <nav id="greenter-header" class="navbar navbar-expand-lg">
        <h1 class="greenter-title navbar-brand"></h1>

        {# <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#greenter-header-collapse" aria-controls="greenter-header-collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button> #}

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item"><a class="nav-link" href="https://greenter.dev">Greenter</a></li>
                <li class="nav-item"><a class="nav-link" href="https://community.greenter.dev">Forum</a></li>
                <li class="nav-item active"><a class="nav-link" href="{{ path('') }}">PHP</a></li>
                <li class="nav-item"><a class="nav-link icon icon-github-circled" target="_blank" href="https://github.com/thegreenter/greenter"></a></li>
            </ul>
        </div>

         <ul class="my-2 my-lg-0">
            <li class="version nav-item">
                <a href="{{ path('../') }}">{{ project.version }}</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block menu %}
    <nav id="site-nav" class="navbar navbar-expand" role="navigation">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" href="{{ path('classes.html') }}">Classes</a></li>

            {% if has_namespaces %}
            <li class="nav-item"><a class="nav-link" href="{{ path('namespaces.html') }}">Namespaces</a></li>
            {% endif %}
            <li class="nav-item"><a class="nav-link" href="{{ path('interfaces.html') }}">Interfaces</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('traits.html') }}">Traits</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('doc-index.html') }}">Index</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('search.html') }}">Search</a></li>
        </ul>
    </nav>
{% endblock %}

{% block leftnav %}
    <div id="api-tree"></div>
{% endblock %}

{% block control_panel %}
    <div id="control-panel">
        {% if project.versions|length > 1 %}
            <form action="#" method="GET">
                <select id="version-switcher" name="version">
                    {% for version in project.versions %}
                        <option value="{{ path('../' ~ version ~ '/index.html') }}" data-version="{{ version }}">{{ version.longname }}</option>
                    {% endfor %}
                </select>
            </form>
        {% endif %}
        <script>
            $('option[data-version="'+window.projectVersion+'"]').prop('selected', true);
        </script>
        <form id="search-form" action="{{ path('search.html') }}" method="GET">
            <span class="icon icon-search"></span>
            <input name="search" class="typeahead form-control" type="search" placeholder="Search">
        </form>
    </div>
{% endblock %}

{% block footer %}
    <div id="footer">
        <p>Generated by <a href="http://sami.sensiolabs.org/">Sami, the API Documentation Generator</a>.</p>
        <p>Created by <a href="https://github.com/giansalex">@giansalex</a>. Source code can be found on <a href="https://github.com/thegreenter/reference">GitHub</a>.</p>
    </div>
{% endblock %}
